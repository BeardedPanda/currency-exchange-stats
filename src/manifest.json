{
  "name": "Currency exchange stats (Rivne, UA)",
  "description": "Збір статистики про обмін валют м.Рівне.",
  "version": "0.0.5",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "notifications",
    "*://rulya-bank.com.ua/*",
    "*://www.piramida.rv.ua/*",
    "*://lion-kurs.com.ua/*",
    "*://goverla.ua/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
